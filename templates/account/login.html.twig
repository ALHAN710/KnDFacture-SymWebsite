    <body class="account-body">

        <!-- Log In page px-4 -->
        <div class="row vh-100">
            <div class="col-lg-3  pr-0">
                <div class="card mb-0 shadow-none">
                    <div class="card-body">
                        
                        <div class="px-3">
                            <div class="mb-2">
                                <a href="#" class="">{# media    logo logo-admin #}
                                    <img src="/images/KnD.png" height="150" width="200" alt="logo" class="my-0 mx-auto d-block">
                                </a> 
                            </div> 
                            <div class="text-center">                                                                                                                       
                                <h6 class="text-muted mt-0 mb-3">Welcome to KnD Factures</h6>
                
                                <h5 class="mt-0 mb-1">Let's Get Started</h5>
                                <!-- <p class="text-muted mb-0">Sign in to continue to MEC.</p>-->
                            </div>  

                            {% if hasError %}
                              <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true"><i class="mdi mdi-close"></i></span>
                                    </button>
                                    <strong>An error has occurred, the username or password is invalid</strong> Change a few things up and try submitting again.
                              </div>
                            {% endif %}  
                            {# {% if error %}
                                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}    #}

                            {% for label, messages in app.flashes %}
                                <div class="alert icon-custom-alert alert-outline-{{label}} alert-{{label}}-shadow alert-dismissible fade show" role="alert">
                                    {% if label == 'success' %}<i class="mdi mdi-check-all alert-icon"></i>{% endif %}
                                    <div class="alert-text">
                                        {% for message in messages %}
                                            <strong>{{ message | raw }}</strong>.
                                        {% endfor %}
                                    </div>    
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true"><i class="mdi mdi-close"></i></span>
                                    </button>                                        
                                </div>
                                
                            {% endfor %}                   
                            
                            <form class="form-horizontal my-4" action="{{ path("account_login") }}" method="POST" >
    
                                <div class="form-group">
                                    <label for="username">Username</label>
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" id="basic-addon1"><i class="mdi mdi-account-outline font-16"></i></span>
                                        </div>
                                        <input type="text" class="form-control" name="_username" id="username" placeholder="Enter user email" value="{{username}}">
                                    </div>                                    
                                </div>
    
                                <div class="form-group">
                                    <label for="userpassword">Password</label>
                                    <div class="input-group mb-3 ">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" id="basic-addon2">
                                                <i class="mdi mdi-key font-16"></i>                    
                                            </span>
                                        </div>
                                        <input type="password" class="form-control input-field" name="_password" id="password-field"  placeholder="Enter password">
                                    </div>                                
                                </div>
    
                                <div class="form-group row mt-4">
                                    <div class="col-sm-6 mb-2">
                                        <span toggle="#password-field" class="fa fa-fw fa-eye-slash toggle-password mr-2"></span><span id="showPwd">Show</span> password
                                    </div>
                                    <div class="col-sm-6 text-md-right">
                                        <a href="{{path('account_recoverpw')}}" class="text-muted font-13"><i class="mdi mdi-lock"></i> Forgot your password?</a>                                    
                                    </div>
                                </div>
    
                                <div class="form-group mb-0 row">
                                    <div class="col-12 mt-2" id="divBtn">
                                        <button class="btn btn-primary btn-block waves-effect waves-light " id="LogInBtn" type="submit" >
                                            <span class="spinner-border spinner-border-sm mr-1 d-none" role="status" aria-hidden="true"></span>
                                            Log In <i class="fas fa-sign-in-alt ml-1"></i>
                                            
                                        </button>
                                    </div>
                                </div>                            
                            </form>
                        </div>
                                       
                    </div>
                </div>
            </div>
            <div class="col-lg-9 p-0 d-flex justify-content-center">
                <div class="accountbg d-flex align-items-center"> 
                    <div class="account-title text-white text-center">
                        {#
                        <!-- <img src="/img/logo-CLETech.png" alt="" height="200" class="logo logo-admin "> -->
                        <!-- <svg class="icon-sprite icon">
                            <use class="glow" fill="url(#radial-glow)" xlink:href="/img/icons-sprite.svg#glow"/> 
                            <use style="background-color: white; width: 1rem; height: 2rem;" xlink:href="/img/logoCLETech.svg#Calque_1"/>
                        </svg>
                        -->
                        <!-- <div class="border w-25 mx-auto border-primary"></div> -->
                        <!-- <h1 class="">My Energy CLEVER make your energy BETTER</h1> -->
                        <!-- <p class="font-14 mt-3">Don't have an account ? <a href="" class="text-primary">Sign up</a></p> -->
                       #}
                    </div>
                </div>
            </div>
        </div>
        <!-- End Log In page -->


        <!-- jQuery  -->
        <script src="/js/jquery.min.js"></script>
        <script src="/js/bootstrap.bundle.min.js"></script>
        <script src="/js/metisMenu.min.js"></script>
        <script src="/js/waves.min.js"></script>
        <script src="/js/jquery.slimscroll.min.js"></script>

        <!-- App js -->
        <script src="/js/app.js"></script>

        <script>
            $(".toggle-password").click(function() {

                $(this).toggleClass("fa-eye-slash fa-eye");
                var input = $($(this).attr("toggle"));
                if (input.attr("type") == "password") {
                    input.attr("type", "text");
                    $('#showPwd').html('Hide');
                } else {
                    input.attr("type", "password");
                    $('#showPwd').html('Show');
                }
            });

