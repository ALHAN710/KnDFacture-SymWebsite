{% extends 'base.html.twig' %}

{% block title %} Modification d'une Commande {% endblock %}

{% block stylesheets %}

{% endblock %}

{% block pageTitle %}
<h4 class="page-title mb-2"><i class="mdi mdi-cart-outline mr-2"></i>Order</h4>  
{% endblock %}

{% block breadcrumb %}
    <div class="">
        <ol class="breadcrumb">
            <li class="breadcrumb-item active">Orders</li>
            <li class="breadcrumb-item active">Edit</li>
        </ol>
    </div>
{% endblock %}

{% form_theme form 'order/_collection.html.twig' %}

{% block body %}
{#{{dump(availabilities)}}#}

<div class="row ">
    <div class="col-12">
        
        <div class="card">
            <div class="card-body">
                <h4 class="mt-0 header-title">Order informations</h4>
                {{ form_start(form) }}
                <div class="card border mb-0 text-center">
                    <div class="card-header">
                        Customer Details
                    </div>
                    <div class="card-body text-left">
                        <h5 class="card-title"></h5>
                        <p class="card-text">Tel : {{order.customer.phoneNumber}}</p>
                        <p class="card-text">Name : {{order.customer.FullName}}</p>
                        <p class="card-text">Delivery Address : {{order.customer.address}}</p>
                        <p class="card-text">Delivery Town : {{order.customer.deliveryAddress.town}}</p>
                        
                    </div>
                </div>
                <div class="card border mb-0 text-center">
                    <div class="card-header">
                        Order Items Details
                    </div>
                    <div class="card-body">
                        <h5 class="card-title"></h5>
                        {{form_widget(form.orderItems)}}
                        <p class="card-text">Items amount Subtotal : <span id="itemsAmountSubtotal">0</span> FCFA</p>
                        <p class="card-text">Delivery Fees         : <span id="deliveryFees">{{order.customer.deliveryAddress.fees}}</span> FCFA</p>
                    </div>
                    
                </div>
                <!--end card-->
                <div class="card border mb-0 text-center">
                    <div class="card-header">
                        Promotion Details
                    </div>
                    <div class="card-body">
                        <h5 class="card-title"></h5>
                        {{form_widget(form.reductions)}}
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    {{ form_label(form.itemsReduction, null, {'label_attr': {'class': 'input-group-text'}}) }}
                                </div>
                                {{ form_widget(form.itemsReduction, {'attr': {'class': "form-control text-center"}}) }}
                                
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    {{ form_label(form.deliveryReduction, null, {'label_attr': {'class': 'input-group-text'}}) }}
                                </div>
                                {{ form_widget(form.deliveryReduction, {'attr': {'class': "form-control text-center"}}) }}
                                
                            </div>
                        </div>
                        </br>
                        <p class="card-text">Promotion amount Subtotal : <span id="totalPromoAmount">0</span> FCFA</p>
                    </div>
                    
                </div>
                <!--end card-->
                <div class="card border mb-0 text-center">
                    <div class="card-header">Payment Details</div>
                    <div class="card-body">
                        <h5 class="card-title"></h5>
                        <p class="card-text">Total Net to paid : <span id="totalAmount">0</span> FCFA</p>
                        {{form_widget(form.paymentStatus, {'attr': {'class': "checkbox checkbox-primary"}}) }}
                        </br>
                        <div class="text-right">
                            <button type="submit" class="btn btn-primary" id="saveBtn">
                                <span class="spinner-border spinner-border-sm mr-1 d-none" role="status" aria-hidden="true"></span>
                                Save
                            </button>
                        
                        </div>
                    </div>
                    
                </div>
                <!--end card-->


                {{ form_end(form) }}
            </div>
            <!--end card-body-->
        </div>
        <!--end card-->
    </div>
</div>
{% endblock %}

